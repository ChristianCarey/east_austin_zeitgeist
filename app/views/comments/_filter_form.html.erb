<%= form_tag comments_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= render 'category_filter' %>
    </div>
    <div class="col-md-6">
      <%= render 'theme_filter' %>
    </div>
  </div>
  <div class="filter-button-container">
    <%= submit_tag "Filter", class: "btn btn-primary" %>
  </div>
<% end %>